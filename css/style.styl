:root
    --very-dark-blue : hsl(233, 47%, 7%)
    --dark-desaturated-blue : hsl(244, 38%, 16%)
    --soft-violet : hsl(277, 64%, 61%)
    --white: hsl(0, 0%, 100%)
    --slightly-transparent-white : hsla(0, 0%, 100%, 0.75)
    --slightly-transparent-white : hsla(0, 0%, 100%, 0.6)
    

html 
    box-sizing: border-box;

*, *:before, *:after 
    box-sizing: inherit;
  
body
    font-family 'Inter', sans-serif
    font-family 'Lexend Deca', sans-serif
    font-family 'Inter', sans-serif
    font-family 'Lexend Deca', sans-serif
    background-color: var(--very-dark-blue)
    color: var(--white)



article
    display: flex
    justify-content: center
    align-items: center
    height: 100vh;

.card
    width 70vw
    max-width: 1440px
    display: flex  
    border-radius: 10px
    overflow hidden
    .left
        background-color: var(--dark-desaturated-blue)
        text-align: start
        flex-basis: 50%
        padding-left:  4rem
        padding-bottom:3rem
        padding-top: 2.8rem
        padding-right: 5rem
        align-items: center
        .heading
            margin-bottom: 2rem
        .cont
            margin-bottom: 2rem
            color: hsla(0, 0%, 100%, 0.75)
        span
            color: hsl(277, 64%, 61%)    
        .social
            display: flex
            justify-content: space-between
            text-align: start
            padding-right: 2rem
            margin-top: 6rem
            div                
                h2
                    margin: 5px 0px
                p
                    margin: 0px
                    font-size: 15px
                    color hsla(0, 0%, 100%, 0.6)

    .right
        
        flex-basis: 50%
        img
            width 100%    
            height 100%
            
@media  (max-width:1078px)
    article
        margin: 10rem
    
    .card
        width 80%
        flex-direction: column
        flex-flow: column-reverse
        min-width 375px
        .left
            text-align: center
            .social
                flex-direction: column
                align-items: center
                margin-top: 2rem
                padding: 0
            

        




